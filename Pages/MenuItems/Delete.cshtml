@page "{id}"
@model FoodDeliveryAdminWebsite.Pages.MenuItems.DeleteModel
@{
    ViewData["Title"] = "Delete Menu Item";
}

<h1>Delete Menu Item</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>MenuItem</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MenuItem.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MenuItem.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MenuItem.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MenuItem.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MenuItem.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MenuItem.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MenuItem.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MenuItem.Category)
        </dd>
        @if (!string.IsNullOrEmpty(Model.MenuItem.ImageUrl))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.MenuItem.ImageUrl)
            </dt>
            <dd class="col-sm-10">
                <img src="@Model.MenuItem.ImageUrl" alt="@Model.MenuItem.Name" class="img-thumbnail" style="max-height: 200px;" />
            </dd>
        }
    </dl>

    <form method="post">
        <input type="hidden" asp-for="MenuItem.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="../Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>