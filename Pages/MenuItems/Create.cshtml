@page
@model FoodDeliveryAdminWebsite.Pages.MenuItems.CreateModel
@{
    ViewData["Title"] = "Create Menu Item";
}

<style>
    body {
        background: url('https://wallpapercave.com/wp/wp8947204.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .bg-overlay {
        background-color: rgba(0, 0, 0, 0.6);
        backdrop-filter: blur(6px);
    }

    .card-glass {
        background-color: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(12px);
        -webkit-backdrop-filter: blur(12px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .form-label,
    .text-muted,
    .form-control::placeholder,
    .text-dark {
        color: #ffffff !important;
    }

    .form-control,
    .form-select {
        background-color: rgba(255, 255, 255, 0.1);
        color: #fff;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

        .form-control:focus,
        .form-select:focus {
            background-color: rgba(255, 255, 255, 0.2);
            color: #fff;
        }

    .btn-primary {
        background-color: #e65100;
        border: none;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #e65100;
        }



    .custom-select-dark option {
        background-color: rgba(255, 255, 255, 0.2);
        
        color: #fff;
    }

    .btn-outline-light:hover {
        background-color: #e65100;
        border-color: #e65100;
        color: #fff;
    }


</style>

<div class="d-flex justify-content-center align-items-center vh-100 bg-overlay-half">
    <div class="card card-glass shadow-lg rounded-4 border-0 p-4" style="width: 100%; max-width: 600px;">
        <div class="text-center mb-4">
            <h3 class="fw-bold text-white mb-1">Create Menu Item</h3>
            <p class="text-muted mb-0">Fill in the details below</p>
        </div>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger small"></div>

            <div class="mb-3">
                <label asp-for="Input.Name" class="form-label fw-semibold">Name</label>
                <input asp-for="Input.Name" class="form-control rounded-pill px-3" placeholder="e.g. Chicken Burger" />
                <span asp-validation-for="Input.Name" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Description" class="form-label fw-semibold">Description</label>
                <textarea asp-for="Input.Description" rows="3" class="form-control rounded-4 px-3" placeholder="Write a short description..."></textarea>
                <span asp-validation-for="Input.Description" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Price" class="form-label fw-semibold">Price</label>
                <input asp-for="Input.Price" class="form-control rounded-pill px-3" type="number" step="0.01" placeholder="e.g. 49.99" />
                <span asp-validation-for="Input.Price" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Category" class="form-label fw-semibold">Category</label>
                <select asp-for="Input.Category"
                        class="form-select rounded-pill px-3 bg-black text-white custom-select-dark"
                        asp-items="@(new SelectList(Model.Categories))">
                    <option value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="Input.Category" class="text-danger small"></span>
            </div>


            <div class="mb-4">
                <label asp-for="Input.ImageUrl" class="form-label fw-semibold">Image URL</label>
                <input asp-for="Input.ImageUrl" class="form-control rounded-pill px-3" placeholder="https://example.com/image.jpg" />
                <span asp-validation-for="Input.ImageUrl" class="text-danger small"></span>
            </div>

            <div class="d-grid mb-2">
                <button type="submit" class="btn btn-primary rounded-pill py-2 fw-semibold">
                    Create Menu Item
                </button>
            </div>
            <div class="text-center">
                <a asp-page="../Index" class="btn btn-outline-light rounded-pill fw-semibold py-2" style="transition: 0.3s;">
                    Cancel
                </a>

            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}












